<!--Create Post-->

<form id="new-post-form" class="mx-auto col-auto" style="width: 700px;">
    <div class="card text-dark  mb-9" style="max-width: 50rem;">
        <div class="card-header bg-dark text-white">Create New Post</div>
        <div class="card-body">

            <div class="form-group col-auto">
                <label class="form-label" for="post-title">Title</label>
                <input type="text" name="post-title" class="form-control" />
            </div>

            <div class="form-group col-auto">
                <label class="form-label" for="post-body">Description</label>
                <textarea name="post-body" class="form-control"></textarea>
            </div>

            <div class="form-group col-auto">
                <label for="post-image">Upload Picture</label>
                <input type="file" class="form-control-file">
            </div>

            <div class="card-footer">
                <button type="button" class="btn btn-block btn-dark">CREATE</button>
            </div>

        </div>
    </div>
</form>

<script src="/javascript/new.js"></script>