<!--Create Post-->

<form id="new-post-form" class="mx-auto col-auto">
    <div class="card  mb-9">
        <div class="card-header ">Create New Post</div>
        <div class="card-body">
            <div class="form-group col-auto">
                <label class="form-label" for="post-title">Title</label>
                <input type="text" name="post-title" class="form-control" />
            </div>

            <div class="form-group col-auto">
                <label class="form-label" for="post-text">Description</label>
                <textarea name="post-text" class="form-control"></textarea>
            </div>

            <div class="form-group col-auto">
                <label for="post-image">Upload Picture</label>
                <input type="file" class="form-control-file">
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-block" id="create-btn">CREATE</button>
            </div>

        </div>
    </div>
</form>

<script src="/javascript/new.js"></script>