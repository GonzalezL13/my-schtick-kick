<!--EDIT POST-->

<form id="new-post-form" class="mx-auto col-auto" >
    <div class="card  mb-9">
        <div class="card-header ">Edit Post</div>
        <div class="card-body">

            <input type="hidden" name="post-id" value="{{post.id}}" />

            <div class="form-group col-auto">
                <label class="form-label" for="post-title">Title</label>
                <input type="text" name="post-title" value="{{post.title}}" class="form-control" />
            </div>


            <div class="form-group col-auto">
                <label class="form-label" for="post-body">Description</label>
                <textarea name="post-body" class="form-control">{{post.post_text}}</textarea>
            </div>


            <div class="form-group col-auto">
                <label for="exampleFormControlFile1">Upload Picture</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>


            <button type="submit" class="btn btn-block" id="update-btn">UPDATE</button>
            <button type="submit" class="btn btn-block" id="delete-btn">DELETE</button>


        </div>
    </div>
</form>

<script src="/javascript/edit.js"></script>